{% extends 'base.html.twig' %}

{% block title %}Mes recettes{% endblock %}

{% block body %}

<h1 style="font-family: Verdana, Geneva, Tahoma, sans-serif;">Voici mes recettes</h1>

<div class="pasta-container" style="display: flex; flex-direction: column">

    <ul>
        {% for recipe in recipes %}
        <li>
            <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{recipe.title}}</a>
        </li>
        {% endfor %}
    </ul>

    <h5>Temps total des recettes : {{ recipeTotalDuration[0].total }} min</h5>

</div>

{% endblock %}
